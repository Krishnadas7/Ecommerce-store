<%-include('../users/mainLayouts/mainheader.ejs')%>


<section class="vh-100 gradient-custom" style="margin-top: 36px;">
  <div class="container py-1 h-100">
    <div class="row d-flex justify-content-center  h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5" style="    margin-top: 74px;">
        <div class="login-page border shadow-lg card">
          <div class="card-body   ">

            <div class="mb-md-5 mt-md-4 ">
             <img style="    margin-left: 169px;
             height: 93px;" src="/public/userAssets/icons/loginpage.png" alt="">
              <!-- <p class="login-letters  text-dark">Please enter your login and password!</p> -->
              <%
              if (typeof message !== 'undefined') {
                %>
                <p style="color: rgb(252, 4, 4);"><%= message %></p>
                <%
              }
              %>
              <form action="/login" method="post" onsubmit="return validatePassword();">
                <div class="form-outline mb-4" style="margin-left: 28px;">
                  <label class="form-label text-dark align-items-start" for="form3Example1cg"  for="typeEmailX">Email</label>
                  <input  type="email" name="email" id="typeEmailX" class="form-control  form-control-lg" />
                </div>

                <div class="form-outline form-white" style="margin-left: 28px;">
                  <label class="login-letters form-label text-dark" for="typePasswordX">Password</label>
                  <input type="password" name="password" id="typePasswordX" class="form-control form-control-lg" />
                  <div id="password-error" class="login-letters text-danger" style="display: none;"></div>
                  <a class="login-letters mt-2" href="/forgot-password">forgot password</a>
                </div>
                <button class="login-letters text-center btn btn-primary btn-lg mt-2" type="submit" style="margin-left: 31%; background-color: #7FB8D4;">Login</button>
              </form>
              <div>
                <p class="mt-2 text-center">Don't have an account? <a href="/signup" class="fw-bold">Sign Up</a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function validatePassword() {
    var password = document.getElementById("typePasswordX").value;
    var passwordPattern = /^(?=.*[0-9])(?=.*[a-zA-Z]).{6,}$/;
    var passwordError = document.getElementById("password-error");

    if (!passwordPattern.test(password)) {
      passwordError.style.display = "block";
      passwordError.textContent = "Password must contain at least 6 characters, including letters and numbers.";
      return false;
    } else {
      passwordError.style.display = "none";
    }

    return true;
  }
</script>

