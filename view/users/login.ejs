<%-include('../users/layouts/header.ejs')%>


<section class="vh-100 gradient-custom">
  <div class="container py-1 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="login-page border-0 shadow-lg card">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4">
              <h2 class="login-letters fw-bold mb-2 text-uppercase">Login</h2>
              <p class="login-letters text-dark">Please enter your login and password!</p>
              <%
              if (typeof message !== 'undefined') {
                %>
                <p style="color: rgb(252, 4, 4);"><%= message %></p>
                <%
              }
              %>
              <form action="/login" method="post" onsubmit="return validatePassword();">
                <div class="form-outline mb-4">
                  <label class="login-letters form-label text-dark" for="typeEmailX">Email</label>
                  <input type="email" name="email" id="typeEmailX" class="form-control form-control-lg" />
                </div>

                <div class="form-outline form-white">
                  <label class="login-letters form-label text-dark" for="typePasswordX">Password</label>
                  <input type="password" name="password" id="typePasswordX" class="form-control form-control-lg" />
                  <div id="password-error" class="login-letters text-danger" style="display: none;"></div>
                  <a class="login-letters mt-4" href="/forgot-password">forgot password</a>
                </div>
                <button class="login-letters btn btn-primary btn-lg mt-4" type="submit">Login</button>
              </form>
              <div>
                <p class="mb-0">Don't have an account? <a href="/signup" class="fw-bold">Sign Up</a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  function validatePassword() {
    var password = document.getElementById("typePasswordX").value;
    var passwordPattern = /^(?=.*[0-9])(?=.*[a-zA-Z]).{6,}$/;
    var passwordError = document.getElementById("password-error");

    if (!passwordPattern.test(password)) {
      passwordError.style.display = "block";
      passwordError.textContent = "Password must contain at least 6 characters, including letters and numbers.";
      return false;
    } else {
      passwordError.style.display = "none";
    }

    return true;
  }
</script>

